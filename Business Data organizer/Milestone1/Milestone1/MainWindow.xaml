<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="32*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="51,24,0,0" Grid.Column="1"/>
        <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="51,75,0,0" Grid.Column="1"/>
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228" Margin="142,28,0,0" Grid.Column="1" SelectionChanged="stateList_SelectionChanged"/>
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228" Margin="142,79,0,0" Grid.Column="1" SelectionChanged="cityList_SelectionChanged"/>
        <DataGrid x:Name="businessGrid" HorizontalAlignment="Left" Height="285" VerticalAlignment="Top" Width="475" Margin="78,117,0,0" Grid.ColumnSpan="2" SelectionChanged="businessGrid_SelectionChanged"/>

    </Grid>
</Window>
